<!DOCTYPE html>
<html>
  <head>
    <title>TrainingMardi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" <%= link_to 'Home', root_path%></a>
  <a class="navbar-brand"  <%= link_to "Products", products_path %></a>



  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse my-2 my-lg-0" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

    <% if user_signed_in? %>
    <li class="nav-item active">
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    </li>

    <li class="nav-item active">
    <%= link_to "Account", edit_user_registration_path %>
  </li>

  <% else %>
    <li class="nav-item active m-3">    
      <%= link_to "Sign in", new_user_session_path %>
    </li>

    <li class="nav-item active m-3">
      <%= link_to "Sign up", new_user_registration_path %>
    </li>

  <% end %>
  </ul>
  </div>
</nav>
<%= render 'layouts/flash'%>

    <%= yield %>
  </body>
</html>
